<% position = request.position %>
<li class="media">

                <div class="media-body">
                  <!--span class="label">Owner</span-->

                  <div class="media-heading">
                      <div class="row-fluid center">
                        <div class="event-body pull-left event-box-text">
                        <div class="big-event-info row-fluid">
                          <div class="span10">
                            <div class="row-fluid">

                            <h4 class="bold info-tooltip" rel="tooltip" data-placement="down" data-original-title="<%#= request.applicant_description %>"><%= request.entity %>
                             </h4>
                            <p><%= request.applicant_description %>
                             </p>

                          </div>
                          <div class="row-fluid">
                          <div class="span7">
                            
                            <p class="grey">Applied on:<%= request.created_at.to_date %></p>
                            <p class="green bold"><%#= event.begins_at.strftime("%B %d, %Y at %I.%M %p") if event.begins_at %></p>

                          </div><!--/span-->
                          <div class="span5">
                           
                          </div><!--/span-->
                          </div><!--/row-fluid-->
                          </div><!--/span-->

                          <div class="span2 ajax"> 
                            <% if request.position.owner? current_user %>
                              <% if request.pending? %>
                                <%= link_to 'Accept', accept_position_position_request_path(request, :position_id => request.position.id), :method => :put, :class => "btn btn-green" %>
                                <%= link_to 'Reject', reject_position_position_request_path(request, :position_id => request.position.id), :method => :put, :class => "btn btn-pink" %>
                              <% else %>
                                <%= link_to 'Status', position_request_path(request.token, :position_id => request.position.id), :class => "btn btn-green" %>
                                <p><%= request.status? %></p>
                              <% end %>
                            <% else  %>
                              <%= link_to 'Status', position_request_path(position_request.token, :position_id => request.position.id), :class => "btn btn-green" %>
                              <p><%= request.status? %></p>
                            <% end %>

                            <% if request.new_comments?(current_user) %>
                                    <!--p><span class="badge andika">.</span></p-->
                            <% end %>
                          </div><!--/span-->
                          
                         

                        </div><!--/big-event-info-->
                        </div><!--/event-body-->
                                        
                      </div><!--/row-fluid-->
                    </div><!--/media-heading-->

                 </div><!--/media-body-->
                 
               <%#= render "events/fb_invite", :event => event %>
               </li>

