<style type="text/css">
input{
  width: 100%;
  margin-top: 8px!important;
}

input[type="text"]{
  border: 1px solid #f7f7f7!important;
  height: 34px!important;


    vertical-align: top;
	display: inline-block;
	padding: 6px 6px;
	/* margin-bottom: 9px; */
	/* margin-top: 0; */
	/* font-size: 14px; */
	line-height: 20px;
}

input:focus, textarea:focus:required:invalid:focus, select:focus:required:invalid:focus {
  box-shadow: none;
  border: 1px solid #00a8ec!important;
}

/*Flat Buttons*/
.btn-flat{
  padding: 10px 30px;
  margin: 5px 0;
  color: #00a8ec;
  font-weight: 400;
  text-rendering: auto;
  border-radius: 3px;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
  border: 2px solid #00a8ec;
  cursor: pointer;
  display: inline-block;
  background-color: transparent;
  text-align: center;
  text-transform: uppercase;
  -webkit-transition: background-color 300ms ease-out;
-moz-transition: background-color 300ms ease-out;
transition: background-color 300ms ease-out;
}

.btn-flat:hover{
  background: #00a8ec;
  color: #ffffff;
  text-decoration: none;
}

.btn-flat.small{
  padding: 4px 13px;
  font-size: 12px;
  width: 25%;
}




</style>

<% if !notice %>
  <%= form_for [@position, @position_request], :url => "/positions/#{@position.token}/position_requests" do |f| %>
    <%= f.hidden_field :position_token, :value => @position.token %>
    <% if @position_request.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@position_request.errors.count, "error") %> prohibited this position_request from being saved:</h2>

        <ul>
        <% @position_request.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <%#= text_field_tag('first_name', nil, :name => "position_request[first_name]")%>
    <%#= f.text_field :name, :placeholder => "Kako se zovete?*" %>
    <%#= f.text_field :birth_year, :placeholder => "Koje ste godiste?*" %>
    <%#= f.text_field :email, :placeholder => "Vas email*" %>
    <%#= f.text_field :education, :placeholder => "Smer na fakultetu koji ste zavrsili(i godinu) ili koji je u toku.*" %>
    <%#= f.text_field :experience, :placeholder => "Programski jezici sa kojim imate najvise iskustva?*" %>
    <%#= f.text_field :availability, :placeholder => "Puno radno vreme/pola radnog vrmena/praksa?" %>
    <%#= f.text_field :why, :placeholder => "Zasto ste se odlucili za ovu prijavu?*" %>

    <%#= @position.simple_fields_for :fields do |d| %>
   
      <% f.object.position.fields.each do |field| %>
        <input id="position_request_<%= field["name"] %>" name="position_request[applicant][<%= field["name"] %>]" placeholder="<%= field["question"] %>*" type="text">
      <% end %>
   
    <%# end %>

    <%#= f.text_field :last_name, :placeholder => "Last Name" %>
    <%#= f.text_field :email, :placeholder => "Email" %>


      <%= f.fields_for :attachments do |p| %>
       <div class="field">
         <%#= p.label :file %><br>
         <%#= p.file_field :file, :multiple => true, name: "attachments[file][]", :class => "btn-flat small" %>
       </div>
     <% end %>

    <div class="actions">
      <%= f.submit "Apply", :class => "btn-flat" %>
    </div>
  <% end %>
</div>
<% else %>
	Thank you for applying
<% end %>


