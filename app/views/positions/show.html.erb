<div class="container">
  <div class="container-fluid single-box-layout profile-page">
    <div class="row-fluid">
      <%= render "profile", :position => @position %>

      <!-- EMPTY Activity on profil pages
      ============================== -->
<% if false %>
      <div class="span9">

        <%#= render "tabs", :user => @user%>

      <div class="profile-activity main-box">
        <div class="row-fluid event-list">
                <div class="row-fluid center">
                  <div class="event-body event-box-text m-30">
                  <div class="grey">
                   
                  <h1 class="normal">No Activities Yet ...</h1>

                  <h3 class="normal">Click bellow and create one</h3>
                  <div class=" border-bg">
                    <a href="/" class="btn invite-btn btn-large btn-pink" data-invited="" data-eid="">
                      <i class="icon-plus"></i> Create</a>
                  </div>
                   
                  </div><!--/big-event-info-->
                  </div><!--/event-body-->

                  <!-- Ako je user prihvatio event, onda se prikazuje dugme post comment, a gubi se accept dugme-->
                  <!--a class="btn btn-small btn-pink"><i class="icon-ok"></i>ACCEPT</a-->
                  <br>
                  <!--a href="" class="small "><i class="icon-comment"></i>Post comment</a-->
                    
                </div><!--/row-fluid-->
              
        </div><!--/row-fluid-->
      </div><!--/main-box-->
      </div><!--/span-->
<% else %>






      <!-- Activity on profil pages
      ============================== -->
      <div class="span9">
        
        <%= render "tabs", :user => current_user %>

      <div class="profile-activity main-box">
        <div class="row-fluid request-list">
          <ul>
            <% @requests.all.each do |request| %>

              <%= render 'summary', :request => request, :position => request.position %>

            <% end %>
          </ul>
        </div><!--/row-fluid-->
      </div><!--/main-box-->
      </div><!--/span-->
<% end %>
    </div><!--/row-fluid-->
  </div><!--/container-fluid-->
</div><!--/container-->








